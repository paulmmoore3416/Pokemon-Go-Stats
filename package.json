{
  "name": "pokemon-go-stats",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "jest --config=jest.config.cjs",
    "test:unit:coverage": "cross-env CI=true jest --config=jest.config.cjs --coverage",
    "test:lint": "eslint . || true",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "@lhci/cli": "^0.8.0",
    "pixelmatch": "^5.0.2",
    "pngjs": "^7.0.1",
    "jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^14.0.0",
    "husky": "^8.0.0",
    "codecov": "^3.8.3"
  }
  ,
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.md": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
